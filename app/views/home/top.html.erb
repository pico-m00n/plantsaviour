<section class="position-relative home p-5">
  <div class="mx-auto  text-center">
    <h1 class="text-light">PlantSaviour</h1>
    <h4 class="text-light">for Plants&You</h3>
     <% unless end_user_signed_in? %>
       <%= link_to 'ゲストログイン（閲覧用）', end_users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 col-lg-3 col-md-6 mx-auto", method: :post %>
       <%= link_to 'ログイン', new_end_user_session_path, class: "btn btn-secondary btn-sm btn-block mb-3 col-lg-3 col-md-6 mx-auto" %>
       <%= link_to '新規登録', new_end_user_registration_path, class: "btn btn-secondary btn-sm btn-block mb-3 col-lg-3 col-md-6 mx-auto" %>
     <% else %>
       <div class="search_form">
          <%= form_with url: search_path, local: true, method: :get do |f| %>
            <%= f.select :range, options_for_select([['質問'], ['記事']]) %>
            <%= f.text_field :word %>
            <%= f.select :search, options_for_select([["部分一致","partial_match"],["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backword_match"]]) %>
            <%= f.submit "検索", class: "btn btn-secondary" %>
          <% end %>
       </div>
     <% end %>
  </div>
</section>
