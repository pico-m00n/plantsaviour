<%= form_with(model: @post, local: true) do |f| %>
<h2>New Posts</h2>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <% @tags.each do |t| %>
      <%= f.label t.name %>
      <%= check_box_tag "post[tag_ids][]", t.id, @post.tags.include?(t) %>
      <br/>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "Back", posts_path(@post) %>